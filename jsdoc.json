{
    "source": {
        "includePattern": ".+\\.js(doc|x)?$",   
        "include": ["pages"],                       
        "exclude": ["node_modules"]             
    },
    "plugins": ["plugins/markdown"],
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true
    },
    "opts": {
        "recurse": true,
        "destination": "./docs"
    }
}
